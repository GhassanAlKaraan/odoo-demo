<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="product_global_access_rule" model="ir.rule">
            <field name="name">Global Product Access</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="domain_force">['|', ('is_a_flower', '=', False), ('is_a_flower', '=', True),
                ('user_id.user_has_groups', 'flower_shop.group_gardener')]
            </field>

            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
